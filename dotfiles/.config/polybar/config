[colors]
background = ${xrdb:polybg:#261527}
foreground = ${xrdb:color7:#BC9FBA}
primary = ${xrdb:color4:#A156A9}
secondary = ${xrdb:color8:#7c727d}
anotherone = ${xrdb:color3:#CB5EAE}
andanotherone = ${xrdb:color6:#6593B3}
alert = ${xrdb:color1:#1D59A4}

[global/wm]
margin-top = 3
margin-bottom = 3

[bar/top]
#if mode == arc
monitor = eDP1
#elif mode == dec
monitor = HDMI-0
#endif
include-file = $XDG_CONFIG_HOME/polybar/top
modules-left = hostname
modules-center = date
#if mode == arc
modules-right = cpu memory filesystem volume bluetooth battery uptime
#elif mode == dec
modules-right = cpu memory filesystem volume uptime
#endif

[bar/bot]
#if mode == arc
monitor = eDP1
#elif mode == dec
monitor = HDMI-0
#endif
include-file = $XDG_CONFIG_HOME/polybar/bot
modules-left = i3 i3msg
modules-center = xwindow
#if mode == arc
modules-right = network vpn
#elif mode == dec
modules-right = network1 network2 vpn
#endif

#if mode == arc
[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage:0\%
label-discharging = %percentage:0\%
label-full = %percentage:0\%
ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.alert}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 
ramp-capacity-10 = 
format-full-foreground = ${colors.primary}
format-charging-foreground = ${colors.primary}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-5 = 
animation-charging-6 = 
animation-charging-framerate = 750
#endif

[module/i3]
type = internal/i3
strip-wsnumbers = true
enable-scroll = false
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-default = 
format = <label-state>
index-sort = true
enable-click = true
label-focused = %icon%
label-focused-foreground = ${colors.primary}
label-focused-padding = 2
label-unfocused-foreground = ${colors.secondary}
label-unfocused = %icon%
label-unfocused-padding = 2
label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 2
label-visible = %name%
label-visible-padding = 2
;label-focused-underline = ${colors.secondary}

[module/i3msg]
type = internal/i3
format = <label-state><label-mode>
label-mode = %mode%
label-mode-padding = 3
label-mode-background = ${colors.alert}
label-focused =
label-unfocused =
label-urgent =
label-visible =

[module/date]
type = internal/date
time = %H:%M
time-alt = %A %d.%m.%y %H:%M:%S
label = %time%
format = <label>
format-foreground = ${colors.secondary}

#if mode == arc
[module/network]
type = internal/network
interface = wlp2s0
interval = 2
format-connected-foreground = ${colors.foreground}
format-disconnected-foreground = ${colors.anotherone}
format-connected = %{A1:st -c __floating -g 65x25-10+55 -e nmtui:}<label-connected>%{A}
format-disconnected = %{A1:st -c __floating -g 65x25-10+55 -e nmtui:}<label-disconnected>%{A}
label-connected = %{T2}%upspeed% %downspeed%%{T-}  %signal% %essid%
label-disconnected = 
ramp-signal-0 = 1
ramp-signal-1 = 2
ramp-signal-2 = 3
ramp-signal-3 = 4
ramp-signal-4 = 5
ramp-signal-5 = 6
ramp-signal-6 = 7
ramp-signal-7 = 8
ramp-signal-8 = 9
ramp-signal-9 = 10
#elif mode == dec
[module/network1]
type = internal/network
interval = 1
accumulate-stats = true
format-connected-foreground = ${colors.foreground}
format-disconnected-foreground = ${colors.anotherone}
interface = enp34s0
format-connected = %{A1:alacritty --class __floating -d 55 25 --position -10 34 -e nmtui:}<label-connected>%{A}
format-disconnected = %{A1:alacritty --class __floating -d 55 25 --position -10 34 -e nmtui:}<label-disconnected>%{A}
label-connected = %{T2}%upspeed% %downspeed%%{T-}  
label-disconnected = 

[module/network2]
type = internal/network
interval = 1
format-connected-foreground = ${colors.foreground}
format-disconnected-foreground = ${colors.anotherone}
interface = wlx0024a59cbb3e
format-connected = %{A1:st -c __floating -d 55 25 --position -10 34 -e nmtui:}<label-connected>%{A}
format-disconnected = %{A1:st -c __floating -d 55 25 --position -10 34 -e nmtui:}<label-disconnected>%{A}
label-connected =  
label-disconnected = 
#endif

[module/vpn]
type = custom/script
#if mode == arc
interval = 5
#elif mode == dec
interval = 3
#endif
exec = $XDG_CONFIG_HOME/polybar/scripts/vpn
;exec-if = ping -c 1 1.1.1.1
label = "%output%"

[module/uptime]
type = custom/script
exec = ~/.config/polybar/scripts/uptime
interval = 120
format-prefix = " "
format-prefix-foreground = ${colors.primary}
format-foreground = ${colors.foreground}

[module/hostname]
type = custom/script
interval = 480
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.secondary}
format-padding = 0
exec = echo "$(uname -n)"

#if == arc
[module/bluetooth]
type = custom/script
interval = 5
exec = $XDG_CONFIG_HOME/polybar/scripts/bluetooth
label = "%output%"
#endif

[module/volume]
type = internal/volume
master-mixer = Master
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
label-muted = 

[module/xwindow]
type = internal/xwindow
#if mode == arc
label = %title:0:40: %
#elif mode == dec
label = %title:0:70: %
#endif
label-foreground = ${colors.foreground}
label-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage%

[module/memory]
type = internal/memory
interval = 3
format-prefix = " "
label = %percentage_used%

[module/filesystem]
type = internal/fs
interval = 25
spacing = 0
mount-0 = /
#if mode == arc
mount-1 = /home
mount-2 = /var
#elif mode == dec
mount-1 = /media/beurre/mount0
#endif
label-mounted = %{T2}[%mountpoint%:%percentage_used%]%{T-}
label-unmounted =

